script(type="text/template", id="tpl-menu-web")
  aside#fixed-menu
    button#burger.hamburger.hamburger--slider.js-hamburger
      span.hamburger-box
        span.hamburger-inner
    ul.links.navs
      li.current(anchor='home', data-scroll='0') Accueil
      li(anchor='videos', data-scroll='1') Videos
      li(anchor='stats', data-scroll='2') Stats
      li(anchor='team', data-scroll='3') My Team
      li(anchor='news', data-scroll='4') News
  header#header
    ul.links.navs
      li.current(anchor='home') Accueil
      li(anchor='videos') Videos
      li(anchor='stats') Stats
      li(anchor='team') My Team
      li(anchor='news') News
    aside#social
      a(href="https://www.facebook.com/FlorianThauvin/?fref=ts", target="_blank")
        i.fa.fa-facebook
      a(href="https://twitter.com/FlorianThauvin", target="_blank")
        i.fa.fa-twitter
      a(href="https://www.instagram.com/flotov/", target="_blank")
        i.fa.fa-instagram

