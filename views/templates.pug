script(type="text/template", id="tpl-video-popup")
  .veil
    .bg.close
    .align
    .modal
      iframe#ytplayer(type='text/html', width='100%', height='100%', src='{{url}}', frameborder='0')

script(type="text/template", id="tpl-img-popup")
  .veil
    .bg.close
    .align
    .modal
      img(src="{{url}}")

script(type="text/template", id="tpl-stats-data")
  li(data-season='{{year}}')
    .each
      h3
        b {{data.games.total}}
        span match joués
      .details
        <% if (data.games.l1) { %>
        .spec
          h4
            b {{data.games.l1}}
            span En L1
          .curve
            .percentage(style='height:{{Math.round(data.games.l1*100/data.games.total)}}%; opacity:{{data.games.l1/data.games.total}}')
        <% } %>
        <% if (data.games.c1) { %>
        .spec
          h4
            b {{data.games.c1}}
            span En C1
          .curve
            .percentage(style='height:{{Math.round(data.games.c1*100/data.games.total)}}%; opacity:{{data.games.c1/data.games.total}}')
        <% } %>
        <% if (data.games.pl) { %>
        .spec
          h4
            b {{data.games.pl}}
            span En PL
          .curve
            .percentage(style='height:{{Math.round(data.games.pl*100/data.games.total)}}%; opacity:{{data.games.pl/data.games.total}}')
        <% } %>
        <% if (data.games.coupe) { %>
        .spec
          h4
            b {{data.games.coupe}}
            span En Coupe
          .curve
            .percentage(style='height:{{Math.round(data.games.coupe*100/data.games.total)}}%; opacity:{{data.games.coupe/data.games.total}}')
        <% } %>
    .each
      h3
        b {{data.actions.total}}
        span actions décisives
      .details
        .spec
          h4
            b {{data.actions.goals}}
            span Buts marqués
        .spec
          h4
            b {{data.actions.passes}}
            span Passes décisives

